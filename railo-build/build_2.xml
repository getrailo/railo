<project name="RailoBuildFile" default="main" basedir=".">
    
	<description>
		Main File to build the Railo Server Project.
		This is based on Micha's CFML scripts
	
	</description>

	<!-- Load properties -->
	<property file="build.properties"/>
	<!-- Set jars -->
	<path id="classpath">
		<fileset dir="${lib.dir}"/>
	</path>
	
	<!-- include the ant-contrib stuff -->
	<taskdef resource="net/sf/antcontrib/antcontrib.properties">
	  <classpath>
	    <pathelement location="lib/ant-contrib-1.0b3.jar"/>
	  </classpath>
	</taskdef>
	
	
	
	
	
	<target name="main">
		<echo>Build Done ${version.majorminor}</echo>
	</target>
	
	
	
</project>
